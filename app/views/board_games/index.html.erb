<h2>List of all board games</h2>

<%= form_tag(board_games_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Games" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <tr>
    <td>Name</td>
    <td>Category</td>
  </tr>
  <% @board_games.each do |game| %>
    <tr>
      <td><%= link_to game.name, board_game_path(game) %></td>
      <td><%= game.category.name %></td>
    </tr>
  <% end %>
</table>

</br>
  <%= link_to 'Home', root_path %>
